<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application>
        <!-- Remove the default RemovedMainActivity from base manifest for this topic -->
        <activity android:name=".MainActivity" tools:node="remove" />

        <!-- Declare topic-specific launcher activity -->
        <activity
            android:name=".DeepLinksActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AndroidSecurityTraining"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Verified app links for lethalmaus.github.io/AndroidSecurityTraining -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https" android:host="lethalmaus.github.io" android:pathPrefix="/AndroidSecurityTraining" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="ast" android:host="dev.jamescullimore" android:pathPrefix="/AndroidSecurityTraining" />
            </intent-filter>
        </activity>
    </application>
</manifest>
