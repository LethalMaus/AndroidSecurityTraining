<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission required for network operations -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Custom signature-level permission for demo components -->
    <permission
        android:name="dev.jamescullimore.android_security_training.permission.DEMO_SIGNATURE"
        android:protectionLevel="signature" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidSecurityTraining">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AndroidSecurityTraining">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Demo components with secure defaults (locked down) -->
        <service
            android:name=".perm.DemoService"
            android:exported="false"
            android:permission="dev.jamescullimore.android_security_training.permission.DEMO_SIGNATURE" />

        <provider
            android:name=".perm.DemoProvider"
            android:authorities="${applicationId}.demo"
            android:exported="false"
            android:readPermission="dev.jamescullimore.android_security_training.permission.DEMO_SIGNATURE"
            android:writePermission="dev.jamescullimore.android_security_training.permission.DEMO_SIGNATURE"
            android:grantUriPermissions="false" />

        <!-- Web topic: broadcast receiver with secure defaults (not exported) -->
        <receiver
            android:name=".web.DemoReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="dev.jamescullimore.android_security_training.web.DEMO" />
            </intent-filter>
        </receiver>
    </application>

</manifest>