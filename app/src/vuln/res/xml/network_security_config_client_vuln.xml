<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Intentionally vulnerable: trusts user-added CAs and permits cleartext -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    <!-- No pinning to allow easy MITM in training -->
</network-security-config>
